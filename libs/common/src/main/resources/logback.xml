<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty name = "APP_NAME" source= "spring.application.name"/>
    <!-- Setting up log path and log file name -->
    <property name="LOG_PATH" value="/var/logs/${APP_NAME}" />
    <property name="LOG_FILE_NAME" value="server" />

    <!-- Setting up logging pattern for console logging -->
    <appender name="ConsoleOutput"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %red(%d) %highlight(%-5level) [%blue(%-20.20t)] %yellow(%20.20logger{20}) [%X{TRACE_ID}][%X{TRANSACTION_ID}]: %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <!-- Setting the filename and logging pattern for log file -->
    <appender name="LogFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d %-5level [%-20.20t] [%20.20logger{20}] [%X{TRACE_ID}][%X{TRANSACTION_ID}]: %msg%n%throwable
            </Pattern>
        </encoder>

        <!-- Setting up a rolling policy with rolling done
              daily and when file size is 10MB-->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <appender name="FILEJSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE_NAME}-json.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE_NAME}-json.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <!-- Logging at INFO level -->
    <root level="info">
        <appender-ref ref="LogFile" />
        <appender-ref ref="ConsoleOutput" />
        <appender-ref ref="FILEJSON" />
    </root>

    <!-- Logging at TRACE level -->
    <logger name="vn.vnpay" level="trace" additivity="false">
        <appender-ref ref="LogFile" />
        <appender-ref ref="ConsoleOutput" />
        <appender-ref ref="FILEJSON" />
    </logger>

</configuration>
